<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#11253c">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feattop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:id="@+id/editFeatText"
                android:layout_alignParentTop="true"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".80"
                android:text="GO!"
                android:id="@+id/buttonFeatGo"
                android:layout_toRightOf="@+id/editFeatText"
                android:background="#11253d"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EU PC/PS"
                android:id="@+id/rbfeatep"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EU Xbox"
                android:id="@+id/rbfeatex"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US PC/PS"
                android:id="@+id/rbfeatup"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US Xbox"
                android:id="@+id/rbfeatux"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="#FFFFFF" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_below="@+id/feattop"
        android:layout_centerHorizontal="true"
        android:id="@+id/youractivefeat">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/featTitle"
            android:text="Feats:"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FeatIv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activefeat"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feattree"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>